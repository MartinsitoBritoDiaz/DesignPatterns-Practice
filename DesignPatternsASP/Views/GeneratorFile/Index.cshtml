
<div class="row">
    <div class="col-8 offset-2">
        <div class="form-group">
            <select id="optionFile" class="form-control">
                <option value="1">Json</option>
                <option value="2">Pipes</option>
            </select>
        </div>
        <br />
        <div class="form-group"> 
            <button class="btn btn-success" onclick="generate();">Generate</button>
        </div>
    </div>
</div>

<script>
    function generate(){
        const optionFile = document.getElementById("optionFile").value;
        console.log(optionFile)
        fetch("@Url.Content("~/GeneratorFile/CreateFile")" + "?optionFile=" + optionFile)
            .then(res => res.json())
            .then(json => alert(json));

    }
</script>